{
  "manifest_version": 3,
  "name": "Mon Extension Brave",
  "version": "1.0",
  "description": "Une extension test pour Brave",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
